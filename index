    <script>
        let curr=0;
        const slides=document.querySelectorAll('.slide');
        const total=slides.length;
        document.getElementById('tot').textContent=total;
        function show(n){
            slides[curr].classList.remove('active');
            curr=(n+total)%total;
            slides[curr].classList.add('active');
            document.getElementById('curr').textContent=curr+1;
            document.getElementById('prev').disabled=(curr===0);
            document.getElementById('next').disabled=(curr===total-1);
            window.scrollTo(0,0);
        }
        function changeSlide(d){show(curr+d);}
        document.addEventListener('keydown',(e)=>{
            if(e.key==='ArrowLeft')changeSlide(-1);
            if(e.key==='ArrowRight')changeSlide(1);
        });
        let startX=0;
        document.addEventListener('touchstart',(e)=>{startX=e.touches[0].clientX;});
        document.addEventListener('touchend',(e)=>{
            let endX=e.changedTouches[0].clientX;
            if(startX-endX>50)changeSlide(1);
            if(endX-startX>50)changeSlide(-1);
        });
        show(0);
    </script>
